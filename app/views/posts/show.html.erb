<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Body</th>
  </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.name %></td>
      <td><%= comment.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= form_tag(comments_path, method: :post) do %>
  <%= text_field_tag :name %>
  <%= text_area_tag :body %>
  <%= hidden_field_tag :post_id, @post.id %>
  <%= submit_tag %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
